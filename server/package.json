{
  "name": "backend_typescript_template",
  "author": "floriangolling",
  "version": "1.0.0",
  "license": "ISC",
  "private": true,
  "description": "A template for a backend project using TypeScript, Express, Sequelize, Biome, Jest",
  "main": "dist/src/app.js",
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:fix-unsafe": "biome check --write --unsafe .",
    "db:migrate": "npm run build && node dist/src/database/database.migrate.js",
    "start": "npm run build && npm run db:migrate up && node dist/src/app.js",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "NODE_ENV=test npm run db:migrate up && NODE_ENV=test_mocha mocha --paths tsconfig.json -r ts-node/register tests/setup.ts 'tests/**/*.ts' --exit --timeout 10000",
    "test:coverage": "NODE_ENV=test npm run db:migrate up && NODE_ENV=test_mocha nyc -r text --reporter=json-summary mocha --paths tsconfig.json -r ts-node/register tests/setup.ts 'tests/**/*.ts' --exit --timeout 10000",
    "coverage-badge": "coverage-badges-cli",
    "dev": "nodemon",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.6.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.4",
    "@types/umzug": "^2.3.7",
    "chai": "^4.1.1",
    "chai-http": "^5.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "nyc": "^17.1.0",
    "sinon": "^20.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "coverage-badges-cli": "^2.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-swagger-generator": "^1.1.17",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1",
    "sequelize": "^6.37.6",
    "umzug": "^3.8.1",
    "zod": "^3.24.2"
  }
}
